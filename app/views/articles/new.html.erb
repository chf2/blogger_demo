<h1>Create a New Article</h1>
<form action=<%= users_url %> method="POST">
  <input type="hidden" 
         name="authenticity-token" 
         value="<%= rails_authenticity_token %>">
  <ul>
    <% @articles.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <br>
  <label for="article-title">Title</label>
  <input type="text" id="article"><%= @article.title %>
  <br>
  <br>
  <label for="article-body">Body</label>
  <textarea id="article-body"><%= @article.body %></textarea>
  <br>
  <input type="submit" value="Create Article!">
</form>